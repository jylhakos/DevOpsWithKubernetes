# Environment Configuration for GKE Deployment
# Copy this file to .env and update with your actual values

# Google Cloud Configuration
PROJECT_ID="your-gcp-project-id"
CLUSTER_NAME="typescript-cluster"
ZONE="us-central1-a"
REGION="us-central1"

# Docker Image Configuration
BACKEND_IMAGE_TAG="latest"
FRONTEND_IMAGE_TAG="latest"

# Application Configuration
BACKEND_PORT="5000"
FRONTEND_PORT="80"

# Scaling Configuration
BACKEND_MIN_REPLICAS="2"
BACKEND_MAX_REPLICAS="10"
FRONTEND_MIN_REPLICAS="2"
FRONTEND_MAX_REPLICAS="10"

# Resource Configuration
BACKEND_CPU_REQUEST="100m"
BACKEND_MEMORY_REQUEST="128Mi"
BACKEND_CPU_LIMIT="200m"
BACKEND_MEMORY_LIMIT="256Mi"

FRONTEND_CPU_REQUEST="50m"
FRONTEND_MEMORY_REQUEST="64Mi"
FRONTEND_CPU_LIMIT="100m"
FRONTEND_MEMORY_LIMIT="128Mi"
