apiVersion: batch/v1
kind: Job
metadata:
  name: {{{ job_name }}}
  labels:
    countdown: "{{ countdown_name }}"
    delay: "{{{ delay }}}"
    length: "{{{ length }}}"
spec:
  template:
    spec:
      containers:
      - name: {{{ container_name }}}
        image: {{{ image }}}
        args: ["{{{ length }}}"]
      restartPolicy: Never